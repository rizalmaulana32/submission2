<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_user_favorite"
        android:layout_width="55dp"
        android:layout_height="55dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_fav_user_name"
        app:layout_constraintStart_toEndOf="@id/img_user_favorite"
        app:layout_constraintTop_toTopOf="@id/img_user_favorite"
        app:layout_constraintBottom_toBottomOf="@id/img_user_favorite"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:layout_marginStart="5dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/username"/>

</androidx.constraintlayout.widget.ConstraintLayout>